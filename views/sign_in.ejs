<link rel="stylesheet" type="text/css" href="/css/sign_in.css" />

<!-- whenever a user sign up , a session is created btw server & browser -->

<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3>Sign In</h3>
        <div class="d-flex justify-content-end social_icon">
          <span
            ><a href="/users/auth/google"
              ><i class="fab fa-google-plus-square"></i></a
          ></span>
          <span
            ><a href="/users/auth/github"
              ><i class="fab fa-github-square"></i></a
          ></span>
        </div>
      </div>
      <div class="card-body">
        <form method="post" action="/users/create-session">
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"
                ><i class="far fa-envelope"></i
              ></span>
            </div>
            <input
              type="text"
              name="email"
              class="form-control"
              placeholder="Email"
            />
          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
            <input
              type="password"
              name="password"
              class="form-control"
              placeholder="password"
            />
          </div>

          <div class="form-group">
            <input
              type="submit"
              value="Login"
              class="btn float-right login_btn"
            />
          </div>
        </form>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          Don't have an account?<a href="/users/sign-up">Sign Up</a>
        </div>
        <div class="d-flex justify-content-center">
          <a href="/users/forgot-password">Forgot your password?</a>
        </div>
      </div>
    </div>
  </div>
</div>
